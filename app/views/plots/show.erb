<h1> <%= @plot.title %> </h1>

<h2>Characters</h2>

<ul>
    <% @plot.characters.each do |character|%>
    <a href="/characters/<%= character.id %>"><li> <%= character.name %> </li></a>
    <% end %>
</ul>

<br><br><a href="/characters/new">Add a New Character</a><br><br>

<h2>Summary</h2>

<p> <%= @plot.summary %> </p>

<a href="/plots/<%= @plot.id %>/edit">Edit</a><br><br>

<form method="POST" action="/plots/<%= @plot.id %>">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete">
</form>

<br>

<a href="/plots">Back to Your Plots</a>

