<div class="container">
<div class="content">
<h1>Create a New Plot</h1>

<% if flash[:failure] %>
    <%= flash[:failure] %><br><br>
<% end %>

<form method="POST" action="/plots">
<label for="title">Title:</label>
<input type="text" name="title"><br><br>

<label for="summary">Summary:</label>
<textarea name="summary"></textarea><br><br>

<input type="submit" value="Create" class="button is-success">
</form>
</div>
</div>