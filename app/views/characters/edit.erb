<h1>Edit <%= @character.name %></h1>

<% if flash[:failure] %>
    <%= flash[:failure] %><br><br>
<% end %>

<form method="POST" action="/characters/<%= @character.id %>">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<label for="name">Name: </label>
<input type="text" name="character[name]" value="<%= @character.name %>"><br><br>

<label for="role">Role: </label>
<input type="text" name="character[role]" value="<%= @character.role %>"><br><br>

<label for="description">Description: </label>
<textarea name="character[description]"><%= @character.description %></textarea><br><br>

<input type="submit" value="Edit">
</form>