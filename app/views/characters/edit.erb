<h1>Edit <%= @character.name %></h1>

<form method="POST" action="/characters/<%= @character.id %>">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<label for="name">Name: </label>
<input type="text" name="name" value="<%= @character.name %>"><br><br>

<label for="role">Role: </label>
<input type="text" name="role" value="<%= @character.role %>"><br><br>

<label for="description">Description: </label>
<input type="text" name="description" value="<%= @character.description %>"><br><br>

<input type="submit" value="Edit">
</form>