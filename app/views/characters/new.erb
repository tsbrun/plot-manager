<div class="container">
<div class="content">
<h1>Create a New Character for <%= @plot.title %></h1>

<% if flash[:failure] %>
    <%= flash[:failure] %>
<% end %>

<form method="POST" action="/characters">
<label for="name">Name: </label>
<input type="text" name="character[name]"><br><br>

<label for="role">Role: </label>
<input type="text" name="character[role]"><br><br>

<label for="description">Description: </label>
<textarea name="character[description]"></textarea><br><br>

<input type="submit" value="Create" class="button is-success">
</form>
</div>
</div>