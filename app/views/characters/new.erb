<h1>Create a New Character for <%= @plot.title %></h1>

<% if flash[:failure] %>
    <%= flash[:failure] %>
<% end %>

<form method="POST" action="/characters">
<label for="name">Name: </label>
<input type="text" name="user[name]"><br><br>

<label for="role">Role: </label>
<input type="text" name="user[role]"><br><br>

<label for="description">Description: </label>
<input type="text" name="user[description]"><br><br>

<input type="submit" value="Create">
</form>